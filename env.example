# Database Configuration
MONGODB_URI=mongodb://localhost:27017/newshub
DATABASE_URL=mongodb://localhost:27017/newshub

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000
# Backend (Render) base URL for server-side proxying (used by /api/admin/scrape)
BACKEND_URL=http://localhost:3001
# Admin token for backend auth middleware (set this in Render too)
BACKEND_ADMIN_TOKEN=replace-with-a-strong-random-token

# Environment
NODE_ENV=development
PORT=3000
BACKEND_PORT=3001

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=adminpass

# External APIs
WEATHER_API_KEY=your-weather-api-key
NEWS_API_KEY=your-news-api-key

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL=30
MAX_CONCURRENT_SCRAPERS=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Production Settings (uncomment for production)
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database
# REDIS_URL=redis://your-redis-host:6379
# NEXT_PUBLIC_API_URL=https://your-domain.com
# API_BASE_URL=https://your-domain.com
# CORS_ORIGIN=https://your-domain.com
